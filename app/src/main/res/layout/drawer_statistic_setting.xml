        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label.unit"
            android:textColor="@color/dark"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/unitHour"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_selectable_point"
                    android:text="@string/label.unit.hour"
                    android:textColor="@color/color_dark_select_white"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_selectable_point"
                    android:text="@string/label.unit.date"
                    android:textColor="@color/color_dark_select_white"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitDay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_selectable_point"
                    android:text="@string/label.unit.day"
                    android:textColor="@color/color_dark_select_white"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
