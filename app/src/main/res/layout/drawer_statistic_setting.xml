                <Button
                    android:id="@+id/unitMonth"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_selectable_point"
                    android:text="@string/label.unit.month"
                    android:textColor="@color/color_dark_select_white"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitQuarter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_selectable_point"
                    android:text="@string/label.unit.quarter"
                    android:textColor="@color/color_dark_select_white"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitYear"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_selectable_point"
                    android:text="@string/label.unit.year"
                    android:textColor="@color/color_dark_select_white"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/label.select.menu"
            android:textColor="@color/dark"
            android:textSize="18sp"/>

        <org.jaram.ds.views.widgets.MenuCollapseListView
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/statistic"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_point_ripple"
        android:text="@string/label.analysis"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>
</FrameLayout>