<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#F5F6F7">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="항목"
            android:textColor="@color/dark"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/typeSale"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white"
                android:text="매출"
                android:textColor="@color/btn_white_text"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/typeCount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white"
                android:text="개수"
                android:textColor="@color/btn_white_text"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="단위"
            android:textColor="@color/dark"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/unitHour"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white"
                    android:text="시간"
                    android:textColor="@color/btn_white_text"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white"
                    android:text="일"
                    android:textColor="@color/btn_white_text"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitDay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white"
                    android:text="요일"
                    android:textColor="@color/btn_white_text"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/unitMonth"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white"
                    android:text="월"
                    android:textColor="@color/btn_white_text"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitQuarter"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white"
                    android:text="분기"
                    android:textColor="@color/btn_white_text"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/unitYear"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white"
                    android:text="년"
                    android:textColor="@color/btn_white_text"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="메뉴 선택"
            android:textColor="@color/dark"
            android:textSize="18sp"/>

        <org.jaram.ds.views.MenuCollapseListView
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/statistic"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/point_btn"
        android:text="분석"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>
</FrameLayout>