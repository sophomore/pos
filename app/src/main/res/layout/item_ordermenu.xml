<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/menu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_name"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:textColor="#CFAAAACC"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/twiceBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ordermenulist_button_background"
            android:text="곱"
            android:textColor="#2185C5"/>

        <Button
            android:id="@+id/curryBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_toStartOf="@id/twiceBtn"
            android:background="@drawable/ordermenulist_button_background"
            android:text="카레"
            android:textColor="#2185C5"/>

        <Button
            android:id="@+id/takeoutBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:layout_toStartOf="@id/curryBtn"
            android:background="@drawable/ordermenulist_button_background"
            android:text="포장"
            android:textColor="#2185C5"/>
    </RelativeLayout>
</FrameLayout>