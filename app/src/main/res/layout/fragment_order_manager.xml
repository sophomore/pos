<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/orderList"
            android:layout_width="480dp"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="36dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/order_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:text="주문서"
                    android:textColor="@color/dark"
                    android:textSize="20sp"/>
                <View
                    android:id="@+id/devider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/order_detail_title"
                    android:background="#aaa"/>
                <Button
                    android:id="@+id/modifyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/default_btn"
                    android:text="수정"
                    android:textColor="@color/point"/>
                <Button
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/modifyBtn"
                    android:layout_marginBottom="24dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/default_btn"
                    android:text="삭제"
                    android:textColor="@color/point"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/modifyBtn"
                    android:layout_marginLeft="24dp"
                    android:textSize="24sp"
                    android:textColor="@color/dark"/>
                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/date"
                    android:layout_marginLeft="24dp"
                    android:textSize="28sp"
                    android:textColor="@color/dark"/>
                <ListView
                    android:id="@+id/ordermenuDetailList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/totalprice"
                    android:layout_below="@id/devider1"
                    android:dividerHeight="0.5dp"
                    android:divider="#cecece"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <ImageButton
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="@drawable/circle_btn"
        android:src="@drawable/ic_search_white_24dp"/>

</FrameLayout>