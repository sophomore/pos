<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:paddingTop="36dp"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/startDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기간"
        android:textSize="16sp"
        android:textColor="@color/dark"/>
    <Button
        android:id="@+id/startDate"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/startDateLabel"
        android:background="@drawable/default_btn"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startDate"
        android:layout_centerHorizontal="true"
        android:rotation="90"
        android:text="~"
        android:textSize="16sp"
        android:textColor="@color/dark"/>
    <Button
        android:id="@+id/endDate"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t"
        android:layout_alignEnd="@id/startDate"
        android:background="@drawable/default_btn"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/menuSelectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/endDate"
        android:text="메뉴"
        android:textSize="16sp"
        android:textColor="@color/dark"/>
    <Button
        android:id="@+id/menuSelectBtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuSelectLabel"
        android:layout_alignStart="@id/startDateLabel"
        android:layout_alignEnd="@id/startDate"
        android:background="@drawable/default_btn"
        android:text="메뉴를 선택하세요."
        android:textSize="18sp"
        android:textColor="@color/dark"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/payLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuSelectBtn"
        android:text="결제 수단"
        android:textSize="16sp"
        android:textColor="@color/dark"/>
    <LinearLayout
        android:id="@+id/payBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payLabel"
        android:layout_alignStart="@id/startDate"
        android:layout_alignEnd="@id/startDate"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/pay_cashChk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cash"/>
            <CheckBox
                android:id="@+id/pay_cardChk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/card"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/pay_serviceChk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/service"/>
            <CheckBox
                android:id="@+id/pay_creditChk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/credit"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_alignRight="@id/endDate"
        android:layout_below="@id/payBox"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/default_btn"
        android:text="@string/confirm"
        android:textColor="@color/point"/>
    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_below="@id/payBox"
        android:layout_toLeftOf="@id/confirmBtn"
        android:layout_marginTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/default_btn"
        android:text="@string/cancel"
        android:textColor="@color/point"/>

</RelativeLayout>