<?xml version="1.0" encoding="utf-8"?>
<!--주문한 메뉴 레이아웃-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:padding="4dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        android:textColor="@color/dark"/>
    <TextView
        android:id="@+id/menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:textColor="#CFAAAACC"/>
    <Button
        android:id="@+id/twiceBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:text="곱"
        android:textColor="#2185C5"
        android:background="@drawable/ordermenulist_button_background"
        style="?android:attr/borderlessButtonStyle"/>
    <Button
        android:id="@+id/curryBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@id/twiceBtn"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:text="카레"
        android:textColor="#2185C5"
        android:background="@drawable/ordermenulist_button_background"
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="4dp"/>
    <Button
        android:id="@+id/takeoutBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@id/curryBtn"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:text="포장"
        android:textColor="#2185C5"
        android:background="@drawable/ordermenulist_button_background"
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="4dp"/>

</RelativeLayout>