<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/empty"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_e"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_huge">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_larger"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/spacing_micro"
        android:text="@string/message.empty.retry"
        android:textColor="@color/gray_7"/>

    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@drawable/btn_gray_7_border"
        android:minHeight="0dp"
        android:padding="@dimen/spacing_smaller"
        android:text="@string/label.refresh"
        android:textColor="@color/gray_7"/>

</LinearLayout>