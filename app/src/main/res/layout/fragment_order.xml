<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/totalpriceBox"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/point"
        android:padding="10dp">

        <TextView
            android:id="@+id/totalpriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/label.total.all"
            android:textColor="#F9F2F2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/default.price"
            android:textColor="#FFF6E5"
            android:textSize="48sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/list_empty"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/totalpriceBox"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="@string/message.empty.order"/>

    <org.jaram.ds.views.widgets.BaseRecyclerView
        android:id="@+id/orderMenuList"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/totalpriceBox"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:id="@+id/payBox"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/totalpriceBox"
        android:background="@color/dark">

        <Button
            android:id="@+id/end"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/accent"
            android:text="@string/label.end_order"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pay_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/label.cash"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#777777"/>

                <Button
                    android:id="@+id/pay_card"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/label.card"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#777777"/>

                <Button
                    android:id="@+id/pay_service"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/label.service"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#777777"/>

                <Button
                    android:id="@+id/pay_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:text="@string/label.credit"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/pay_confirmBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CC000000"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/pay_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

    <org.jaram.ds.views.widgets.MenuListView
        android:id="@+id/menuList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/payBox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/orderMenuList"
        android:orientation="horizontal"/>
</RelativeLayout>