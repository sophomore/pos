<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <org.jaram.ds.views.widgets.PaginationView
            android:id="@+id/orderList"
            android:layout_width="480dp"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="36dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/order_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:text="주문서"
                    android:textColor="@color/dark"
                    android:textSize="20sp"/>

                <View
                    android:id="@+id/devider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/order_detail_title"
                    android:background="#aaa"/>

                <Button
                    android:id="@+id/printReceipt"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/default_btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="영수증출력"
                    android:textColor="@color/point"/>

                <Button
                    android:id="@+id/printStatement"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:layout_toStartOf="@id/printReceipt"
                    android:background="@drawable/default_btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="전표출력"
                    android:textColor="@color/point"/>

                <Button
                    android:id="@+id/delete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:layout_toStartOf="@id/printStatement"
                    android:background="@drawable/default_btn"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="삭제"
                    android:textColor="@color/point"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/delete"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/dark"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/date"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/dark"
                    android:textSize="28sp"/>

                <org.jaram.ds.views.widgets.BaseRecyclerView
                    android:id="@+id/orderMenuList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/totalprice"
                    android:layout_below="@id/devider1"
                    android:overScrollMode="never"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/order"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="450dp"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:padding="16dp"
        android:src="@drawable/ic_action_plus"
        android:background="?attr/selectableItemBackground"
        app:backgroundTint="@color/accent"/>
</FrameLayout>