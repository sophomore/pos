<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <org.jaram.ds.views.widgets.PaginationView
            android:id="@+id/orderList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bg_accent_ripple"
            android:text="@string/label.order"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_large"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/orderDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="36dp"
            android:background="@android:color/white"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/order_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:paddingEnd="0dp"
                    android:paddingStart="12dp"
                    android:paddingTop="8dp"
                    android:text="@string/label.order_detail.title"
                    android:textColor="@color/dark"
                    android:textSize="20sp"/>

                <View
                    android:id="@+id/devider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/order_detail_title"
                    android:background="#aaa"/>

                <Button
                    android:id="@+id/printReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/label.print_receipt"
                    android:textColor="@color/point"/>

                <Button
                    android:id="@+id/printStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:layout_toStartOf="@id/printReceipt"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/label.print_statement"
                    android:textColor="@color/point"/>

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="24dp"
                    android:layout_toStartOf="@id/printStatement"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:text="@string/label.delete"
                    android:textColor="@color/point"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/delete"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/dark"
                    android:textSize="24sp"/>

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/date"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/dark"
                    android:textSize="28sp"/>

                <org.jaram.ds.views.widgets.BaseRecyclerView
                    android:id="@+id/orderMenuList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/totalprice"
                    android:layout_below="@id/devider1"
                    android:overScrollMode="never"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <FrameLayout
            android:id="@+id/order2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="36dp"
            android:background="@drawable/bg_dot_outline"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/spacing_larger"
                android:drawableTop="@drawable/ic_add_black_48dp"
                android:text="@string/label.order.large_button"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_huge"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>