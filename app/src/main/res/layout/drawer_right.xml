<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:layout_gravity="end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/order"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:background="@drawable/circle"
            android:text="@string/screen.order"
            android:textColor="#eee"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/orderManage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:background="@drawable/circle"
            android:text="@string/screen.order_manage"
            android:textColor="#eee"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/statistic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:background="@drawable/circle"
            android:text="@string/screen.statistic"
            android:textColor="#eee"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/menuManage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:background="@drawable/circle"
            android:text="@string/screen.menu_manage"
            android:textColor="#eee"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/setting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:background="@drawable/circle"
            android:text="@string/screen.setting"
            android:textColor="#eee"
            android:textSize="16sp"/>
    </LinearLayout>
</RelativeLayout>
